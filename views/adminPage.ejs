    <table class="table table-info container table-bordered my-0 mx-auto">
        <thead>
  
            <tr>
                <th class="table-primary" scope="col">No.</th>
                <th class="table-primary" scope="col">Name</th>
                <th class="table-primary" scope="col">Email</th>
                <th class="table-primary" scope="col">Edit</th>
                <th class="table-primary" scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% useData.forEach((x)=>{ %>
                <tr>
                    <td>
                        <%=++i%>
                    </td>
                    <td>
                        <%=x.name%>
                    </td>
                    <td>
                        <%=x.email%>
                    </td>
                    <td>
                        <a href="/edit/<%-x._id%>" class="text-white">
                          <i class="fa-solid fa-pen-to-square fa-xl" style="color: #000000;"></i>
                        </a>
                    </td>
                    <td>
                      <a href="/delete/<%= x._id %>" class="text-white"
                        onclick="return confirm('Do you want to Remove <%= x.username %> ?')">
                        <i class="fa-solid fa-trash-can fa-xl" style="color: #000000;"></i>
                     </a>
                     
                    </td>
                </tr>
                <% }) %>
    </table>
  
